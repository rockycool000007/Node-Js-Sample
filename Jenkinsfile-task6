pipeline{
    agent any;
    
    stages {
        stage('Checkout SCM') {
            steps {
                sh "echo ${env.GIT_COMMIT}"
                git 'https://github.com/rockycool000007/simplefilerepo.git'
            }
        }
        
        stage('Test') {
            steps {
                script {
                    def customImage = docker.build("rockycool/my-image:${env.BUILD_ID}")
                    
                    withDockerRegistry(credentialsId: 'dockercred', toolName: 'docker-tool') {
                        customImage.push()   
                    }
                }
            }
        }
        
        /*
