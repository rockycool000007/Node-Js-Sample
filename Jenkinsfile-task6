            steps {
                sh 'docker build -t myapp:v1.0 .'
                // def customImage = docker.build("my-image:v1")
         
                withCredentials([usernamePassword(credentialsId: 'dockercred', passwordVariable: 'dockerpass', usernameVariable: 'dockeruser')]) {
                    sh "echo 'Hello'"
                    sh "docker login -u ${dockeruser} -p ${dockerpass}"
                }
                withDockerRegistry(credentialsId: 'dockercred', toolName: 'docker-tool', url: 'https://hub.docker.com') {
                    //docke
                }
               
               sh 'docker push rockycool/myapp:v1.0'
            }
        }*/
    }
}
